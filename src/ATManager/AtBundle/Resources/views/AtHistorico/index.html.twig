{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
   <h3>Gestión de Evolución en AT : {{ at }}</h3>
       <table class="table table-bordered table-striped">
       <tr>
        <td>
            Problema:
        </td>       
              <td>
                {{ at.descripcion }}
              </td>
        </tr>
       </table>
       
       <table>
       <td>
            <a href="{{ path('at_historico_new', { 'idAt': at.id }) }}">
                <h4>[Crear]&nbsp;</h4>
            </a>
       </td>
       <td>
            <a href="{{ ret }}">
                <h4>[Volver]</h4>
            </a>
       </td>
   </table>
   <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Fecha</th>   
                <th>Comentario</th>
                <th>Estadio</th>            
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
       <tr>
        <td>
                    <a href="{{ path('at_historico_show', { 'id': entity.id }) }}">
                        Ver
                    </a>
                </td>
        <td>
                    <a href="{{ path('at_historico_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </td>
        <td>
                    <a href="{{ path('at_historico_eliminar', { 'id': entity.id }) }}" onClick="return confirm('¿Desea eliminar la nota seleccionada?');">
                        Eliminar
                    </a>
                </td>
                
                <td>{{ entity.fecha | date('d-m-Y h:i:s') }}</td>>
                <td>{{ entity.comentario }}</td>
                <td>{{ entity.estadio }}</td>

       </tr>         
        {% endfor %}
        </tbody>
    </table>
{% endblock %}