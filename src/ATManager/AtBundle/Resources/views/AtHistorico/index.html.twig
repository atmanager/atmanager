{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h4>Gestión de Evolución en AT : {{ at }}</h4>
    
                <p>Problema/síntoma manifestado:</p>
                 <p><strong>{{ at.descripcion }}</strong></p>
     
    <table>
        <tr> 
            <td>
                <a href="{{ path('at_historico_new', { 'idAt': at.id }) }}">
                    <h5>[Agregar nueva evolución]</h5>
                </a>
            </td>
           
        </tr>
    </table>
    <table class="table table-bordered table-striped" >
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Fecha</th>   
                <th>Comentario</th>
                <th>Estadio</th>            
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                    <a href="{{ path('at_historico_show', { 'id': entity.id }) }}">
                        Ver
                    </a>
                </td>
                <td>
                    <a href="{{ path('at_historico_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </td>
                <td>
                    <a href="{{ path('at_historico_eliminar', { 'id': entity.id }) }}" onClick="return confirm('¿Desea eliminar instancia de evolución?');">
                        Eliminar
                    </a>
                </td>
                <td>{{ entity.fecha | date('d-m-Y h:i:s') }}</td>>
                <td>{{ entity.comentario }}</td>
                <td>{{ entity.estadio }}</td>
            </tr>         
        {% endfor %}
        </tbody>
    </table>

            
                <a href="{{ ret }}">
                    [Volver]
                </a>
            

{% endblock %}