{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
   <h4>Gestión de Notas y archivos adjuntos en AT: {{ at }}</h4>
   <hr>

   <table>
       <td>
            <a href="{{ path('at_nota_new', { 'idAt': at.id }) }}">
                <h4>[Crear]&nbsp;</h4>
            </a>
       </td>
       <td>
            <a href="{{ ret }}">
                <h4>[Volver]</h4>
            </a>
       </td>
   </table>
   <table class="table table-bordered table-striped">
        <thead>
            <tr>
    <th colspan="3" style="text-align:center">Acciones</th>
                <th>Descripcion</th>
                <th>Fecha</th>   
                <th>Comentario</th>
                <th>Archivo</th>            
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
    <td>
                    <a href="{{ path('at_nota_show', { 'id': entity.id }) }}">
                        Ver
                    </a>
                </td>
    <td>
                    <a href="{{ path('at_nota_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </td>
    <td>
                    <a href="{{ path('at_nota_eliminar', { 'id': entity.id }) }}" onClick="return confirm('¿Desea eliminar la nota seleccionada?');">
                        Eliminar
                    </a>
                </td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.fecha | date('d-m-Y') }}</td>
                <td>{{ entity.comentario }}</td>
                <td>
                    {% if (entity.getWebPath()) %}
                        <a href="{{ asset(entity.getWebPath) }}" target="_blank">
                            Ver
                        </a>
                    {% endif %}
                </td>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}