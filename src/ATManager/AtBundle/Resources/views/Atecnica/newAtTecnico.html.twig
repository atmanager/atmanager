{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h3>Asignar Técnico para AT: {{ entity.id}}</h3>
    
    <a href="javascript:history.back(1)"><h4>[Volver]</h4></a>
   
    <div class="panel-group" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                        Ver Mapa técnicos <span class="badge"> {{ mapatec | length }} </span>
                    </a>
                </h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse">
                <div class="panel-body">
                    <table class="table table-bordered table-striped table-condensed">
                        <thead>
                            <th>Asignar</th>
                            <th>Técnico</th>
                            <th>Cantidad de AT </th>
                        </thead>
                        <tbody>
                        {% for mapa in mapatec %}
                            <tr>
                                <td>

                                     <div class="btn-group">
                                          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="caret"></span>
                                          </button>
                                            <ul class="dropdown-menu">
                                                <li>
                                                     <a href="{{ path('atecnica_asignarTecnicoAT',{ 'at': entity.id,'tec': mapa.idtecnico }) }}"><i class="glyphicon glyphicon-wrench"></i> Asignar </a>
                                                </li>

                                                <li>    
                                                    <a href="{{ path('atecnica_asignarTecnicoAT',{ 'at': entity.id,'tec': mapa.idtecnico }) }}?mail=1"><i class="glyphicon glyphicon-envelope"></i> Asignar y notificar</a>
                                                </li>

                                            </ul>
                                    </div>


                                   
                                      
                                </td>
                                <td>{{ mapa.tecnico }}</td>
                                <td>{{ mapa.cantidad }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>    
                </div>
            </div>
        </div>  
    </div> 




{% endblock %}
