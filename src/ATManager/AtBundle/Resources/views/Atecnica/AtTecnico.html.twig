{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h4>Reasignar técnico principal en AT : {{ entity.id }}</h4>
    <table>
              
   </table>
    <table class="table table-bordered table-striped">
        <thead>
        <th colspan="2" style="text-align:center">Acciones</th>
            <th>Técnico</th>
            <th>Rol</th>
        </thead>
        <tbody>
        {% for peon in tecnicos %}    
            <tr>
                <td>
                    <a href="{{ path('atecnico_show',{ 'id':peon.id }) }}">
                        Ver
                    </a>
                </td>
                <td>
                    {% if peon.rol.principal %}
                      <a href="{{ path('atecnico_reasignar',{ 'id':peon.id }) }}">
                            Reasignar
                      </a>

                   
                    {% else %}

                        <a href="{{ path('atecnico_eliminar',{ 'id':peon.id }) }}" onClick="return confirm('¿Desea Eliminar el Ayudante Seleccionado?');">
                            Eliminar
                        </a>
                    {% endif %}

                  </td>
                <td>{{ peon.tecnico }}</td>
                <td>{{ peon.rol }}</td>
            </tr>
        {% endfor %}    
        </tbody>
    </table>
    
            <a href="{{ ret }}">
                <h5>[Volver]</h5>
            </a>
       
{% endblock %}
