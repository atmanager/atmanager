{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h5>Resultados obtenidos en Base de Conocimientos:</h5>
    <table class="table table-bordered table-striped table-condensed">
        <thead>    
            <th>AT</th>
            <th>Detalle</th>
            <th>Sintomas </th>
            <th>Fecha Reparaci√≥n </th>
            <th>Tareas realizadas </th>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>                              
                <td><a href="{{ path('at_show', { 'id': entity.AtId }) }}" title="Ver Solicitud">{{ entity.AtId }}</a></td>
                <td><a href="{{ path('atecnica_verDetalleAt', { 'id': entity.AtId }) }}" title="Ver Detalle">Acceder</a></td>
                <td>{{ entity.Sintoma }}</td>
                <td>{{ entity.fechaFinal | date('Y-m-d') }}</td>
                <td>{{ entity.Tareas }}</td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay resultados para mostrar</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
    	{{ knp_pagination_render(entities) }}
    {% endif %}
    <a href="{{ path('atecnica_baseConocimiento') }}">Volver</a>
{% endblock %}