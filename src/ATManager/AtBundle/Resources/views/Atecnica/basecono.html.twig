{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h3>Resultados obtenidos en Base de Conocimientos:</h3>
    <table class="table table-bordered table-striped table-condensed">
        <thead>    
            <th>AT</th>
            <th>Sintomas </th>
            <th>Fecha Reparaci√≥n </th>
            <th>Tareas realizadas </th>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>                              
                <td><a href="{{ path('at_ver_historico', { 'id': entity.AtId }) }}" title="Ver historico">{{ entity.AtId }}</a></td>
                <td>{{ entity.Sintoma }}</td>
                <td>{{ entity.fechaFinal | date('Y-m-d') }}</td>
                <td>{{ entity.Tareas }}</td>
            </tr>
            {% else %}
                <tr>
                    <td colspan="4">No hay resultados para mostrar</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
    	{{ knp_pagination_render(entities) }}
    {% endif %}
    <a href="{{ path('atecnica_baseConocimiento') }}">Volver</a>
{% endblock %}