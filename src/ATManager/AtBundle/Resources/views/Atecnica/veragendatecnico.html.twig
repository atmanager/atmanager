{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
    <h3>Agenda de: {{ tecnico}}</h3>
    
    <a href="{{ path('atecnica_buscarAgendaTecnico') }}"><h4>[Volver]</h4></a>
   
    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <th colspan="6" style="text-align:center">Acciones</th>
	    <th>Nro AT</th>
            <th>Problema</th>
            <th>Último Estadio </th>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td>

                {% if not entity.miUltimoEstadio().getClasificacion().getFinalizaAt() %}
                <a title="Evoluciona AT" 
                href="{{ path('at_historico',{ 'idAt': entity.id })}}"
                >EVO
                </a>
                
                {% endif %}
                </td>

                <td><a title="Fallas de AT" href="{{ path('at_falla', { 'idAt': entity.id }) }}" title="Fallas diagnosticadas en AT">FAL</a></td>

                <td><a title="Técnicos Ayudantes" href="{{ path('atecnico',{ 'atId': entity.id })}}">TEC</a></td>

                <td><a href="{{ path('at_repuesto', { 'idAt': entity.id }) }}" title="Repuestos de AT" href="#">REP</a></td>

                <td><a title="Servicios Terceros de AT" href="{{ path('at_servicio', { 'idAt': entity.id }) }}">SVT</a></td>  

                <td><a href="{{ path('at_nota', { 'idAt': entity.id }) }}" title="Notas de AT">NOT</a></td>
              
                <td><a href="{{ path('at_show', { 'id': entity.id }) }}" title="Consultar/reimprimir Solicitud">{{ entity.id }}</a></td>

                <td>{{ entity.descripcion}}</td>
                <td>{{ entity.miUltimoEstadio() }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
    	{{ knp_pagination_render(entities) }}
    {% endif %}
{% endblock %}