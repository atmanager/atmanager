{% extends 'AtBundle::base_at.html.twig' %} 
{% block content %}
   <h4>Gestión de Servicios Terceros en AT: {{ at }}</h4>
   <table>
       <td>
            <a href="{{ path('at_servicio_new', { 'idAt': at.id }) }}">
                <h5>[Agregar nuevo servicio en At]</h5>
            </a>
       </td>
      
   </table>
   <table class="table table-bordered table-striped">
        <thead>
            <tr>
		<th colspan="3" style="text-align:center">Acciones</th>
                <th>Fecha</th>
                <th>Precio</th>
                <th>Servicio Tercero</th>
                <th>Proveedor</th>            
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
		<td>
                    <a href="{{ path('at_servicio_show', { 'id': entity.id }) }}">
                        Ver
                    </a>
                </td>
		<td>
                    <a href="{{ path('at_servicio_edit', { 'id': entity.id }) }}">
                        Editar
                    </a>
                </td>
		<td>
                    <a href="{{ path('at_servicio_eliminar', { 'id': entity.id }) }}" onClick="return confirm('¿Desea eliminar el servicio tercero seleccionado?');">
                        Eliminar
                    </a>
                </td>
                <td>{{ entity.fecha | date('d-m-Y') }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.serviciotercero.nombre }}</td>
                <td>{{ entity.proveedor.nombre }}</td>
        {% endfor %}
        </tbody>
    </table>
   
            <a href="{{ ret }}">
                <h5>[Volver]</h5>
            </a>
     
{% endblock %}