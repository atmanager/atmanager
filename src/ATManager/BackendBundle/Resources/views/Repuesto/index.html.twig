{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h1>Repuesto list</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripamplia</th>
                <th>Comentario</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('repuesto_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripamplia }}</td>
                <td>{{ entity.comentario }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('repuesto_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('repuesto_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('repuesto_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
