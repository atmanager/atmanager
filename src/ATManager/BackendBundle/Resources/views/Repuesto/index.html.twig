{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Repuestos</h3>
    {{ form(form)}}
    <br />
    <a href="{{ path('repuesto_new') }}">
        <h4>[Crear Repuesto]</h4>
    </a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción Amplia</th>
                <th>Comentario</th>          
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('repuesto_show', { 'id': entity.id }) }}">Ver</a></td>
                <td><a href="{{ path('repuesto_edit', { 'id': entity.id }) }}">Editar</a></td>
                <td><a href="{{ path('repuesto_eliminar', { 'id': entity.id }) }}">Eliminar</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.descripamplia }}</td>
                <td>{{ entity.comentario }}</td>          
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
        {{ knp_pagination_render(entities) }}
    {% endif %}
{% endblock %}
