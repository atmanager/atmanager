{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Ver Repuesto</h3>

    <table class="table">
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre:</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Descripción Ampliada:</th>
                <td>{{ entity.descripamplia }}</td>
            </tr>
            <tr>
                <th>Comentario:</th>
                <td>{{ entity.comentario }}</td>
            </tr>
	    <tr>
                <th>Clasificación:</th>
                <td>{{ entity.clasif.nombre }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('repuesto') }}">
        Volver al Listado
    </a>

{% endblock %}
