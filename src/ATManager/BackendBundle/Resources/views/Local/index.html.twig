{% extends 'BackendBundle::base_backend.html.twig' %} 
{% block title %} ABM Locales {% endblock %}   

{% block content %}

<div class="row">
	<div class="col-xs-9"> <h3> Gesti√≥n de Locales </h3> </div>
	<div class="col-xs-3"> <a href="{{ path('local_nuevo')}}" class="btn btn-primary">Nuevo</a> </div>
</div>
{{ form(form)}}
  <br />

<table class="table table-bordered table-striped" >
<tr>
	<th colspan="2" style="text-align:center"> Acciones </th>
	<th> Id </th>
	<th> Nombre </th>
	<th> Referencia </th>
</tr>
{% for local in locales %}
<tr>
	<td><a href="{{ path('local_edit', {'id': local.id} )}}">Editar</a></td>
	<td><a href="{{ path('local_delete', {'id': local.id} )}}">Eliminar</a></td> 
	<td> {{ local.id }} </td>
	<td> {{ local.nombre }} </td>
	<td> {{ local.codigointerno }} </td>
</tr>
{% endfor %}
</table>
{% if locales.getTotalItemCount > 10 %}
{{ knp_pagination_render(locales) }}
{% endif %}
{% endblock %}