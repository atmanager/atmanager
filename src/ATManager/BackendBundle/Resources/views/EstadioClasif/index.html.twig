{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Clasificación de Estadios</h3>
 <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Clasif</th>
                <th>Nombre</th>
                <th>Inicializa AT</th>
                <th>Finaliza AT</th>
                <th colspan="3" style="text-align:center">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.iniciaAt }}</td>
                <td>{{ entity.finalizaAt }}</td>
                               
                <td><a href="{{ path('estadioclasif_show', { 'id': entity.id }) }}">Ver</a> </td>
                <td><a href="{{ path('estadioclasif_edit', { 'id': entity.id }) }}">Editar</a> </td>
                <td><a href="{{ path('estadioclasif_eliminar', { 'id': entity.id }) }}">Eliminar</a> </td>
                
                
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('estadioclasif_new') }}">
                Crear nueva Clasificación
            </a>
        </li>
    </ul>
    {% endblock %}
