{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Clasificación de Estadios</h3>
    <a href="{{ path('estadioclasif_new') }}">
         <h4>[Crear Clasificación]</h4>
    </a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Inicializa AT</th>
                <th>Finaliza AT</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('estadioclasif_show', { 'id': entity.id }) }}">Ver</a> </td>
                <td><a href="{{ path('estadioclasif_edit', { 'id': entity.id }) }}">Editar</a> </td>
                <td><a href="{{ path('estadioclasif_eliminar', { 'id': entity.id }) }}"  onclick="return confirm('¿Desea eliminar el item seleccionado?');">Eliminar</a> </td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                {% if entity.iniciaAt %}
                    <td>si</td>
                {% else %}
                    <td>no</td>    
                {% endif %}
                {% if entity.finalizaAt %}
                    <td>si</td>
                {% else %}
                    <td>no</td>    
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>    
{% endblock %}
