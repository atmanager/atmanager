{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
     <h3>Gesti√≥n de Sectores</h3>
     {{ form(form)}}
     <br />
     <a href="{{ path('sector_new') }}">
        <h4>[Crear Sector]</h4>
     </a>
     <table class="table table-bordered table-striped" >
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Internos</th>
                <th>Mail</th>
                <th>Referente</th>    
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sector_show', { 'id': entity.id }) }}">Ver</a></td>
                <td><a href="{{ path('sector_edit', { 'id': entity.id }) }}">Editar</a></td>
                <td><a href="{{ path('sector_eliminar', { 'id': entity.id }) }}">Eliminar</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.internos }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.referente }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
        {{ knp_pagination_render(entities) }}
    {% endif %}
{% endblock %}
