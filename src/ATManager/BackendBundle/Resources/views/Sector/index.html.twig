{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Listado de Sectores</h3>

     <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Internos</th>
                <th>Mail</th>
                <th>Referente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('sector_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.internos }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.referente }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('sector_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('sector_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('sector_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
