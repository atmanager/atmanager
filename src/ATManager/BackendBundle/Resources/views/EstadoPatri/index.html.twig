{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Estados de Patrimonios</h3>
     <a href="{{ path('estadopatri_new') }}">
        <h4>[Crear Estado de Patrimonio]</h4>
     </a>
     <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Nombre</th>                      
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('estadopatri_show', { 'id': entity.id }) }}">Ver</a></td>
                <td><a href="{{ path('estadopatri_edit', { 'id': entity.id }) }}">Editar</a></td>
                <td><a href="{{ path('estadopatri_eliminar', { 'id': entity.id }) }}"  onclick="return confirm('¿Desea eliminar el item seleccionado?');">Eliminar</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>                
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}