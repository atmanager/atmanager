{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Proveedores</h3>
    {{ form(form)}}
    <br />
    <a href="{{ path('proveedor_new') }}">
        <h4>[Crear]</h4>
    </a> 
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Cuit</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Telefono</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">Ver</a></td>
                <td><a href="{{ path('proveedor_edit', { 'id': entity.id }) }}">Editar</a></td>
                <td><a href="{{ path('proveedor_eliminar', { 'id': entity.id }) }}">Eliminar</a></td>
                <td>{{ entity.id }}</td>
                <td>{{ entity.cuit }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.calle ~ ' ' ~ entity.puerta }}</td>
                <td>{{ entity.telefono }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>  
    {% if entities.getTotalItemCount > 10 %}
        {{ knp_pagination_render(entities) }}
    {% endif %} 
{% endblock %}
