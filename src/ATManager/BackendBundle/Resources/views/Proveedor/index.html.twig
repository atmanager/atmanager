{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h1>Proveedor list</h1>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cuit</th>
                <th>Nombre</th>
                <th>Calle</th>
                <th>Puerta</th>
                <th>Telefono</th>
                <th>Correo</th>
                <th>Comentario</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('proveedor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cuit }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.puerta }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.correo }}</td>
                <td>{{ entity.comentario }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('proveedor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('proveedor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('proveedor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
