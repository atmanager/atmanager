{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Ver Estadio</h3>
    <table class="table">
        <tbody>
            <tr>
                <th>Id:</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre:</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Comentario:</th>
                <td>{{ entity.comentario }}</td>
            </tr>
            <tr>
                <th>Estado:</th>
                {% if entity.estado %}
                    <td>si</td>
                {% else %}
                    <td>no</td>    
                {% endif %}
            </tr>
        </tbody>
    </table>
    <a href="{{ path('estadio') }}">
    	Volver a listado
    </a>

{% endblock %}
