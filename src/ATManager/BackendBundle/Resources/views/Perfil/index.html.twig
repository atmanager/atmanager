{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h1>Perfil list</h1>

    <table class="listado de perfiles">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th>Comentario</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('perfil_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.comentario }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('perfil_show', { 'id': entity.id }) }}">Ver</a>
                    </li>
                    <li>
                        <a href="{{ path('perfil_edit', { 'id': entity.id }) }}">Editar</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('perfil_new') }}">
                Crear nuevo
            </a>
        </li>
    </ul>
    {% endblock %}
