{% extends 'BackendBundle::base_backend.html.twig' %}

{% block content %}
    <h3>Gestión de Servicios de Terceros</h3>
    {{ form(form)}}
    <br />
    <a href="{{ path('serviciotercero_new') }}">
        <h4>[Crear]</h4>
    </a>
    <table class="table table-bordered table-striped">
        <thead>
                <th colspan="3" style="text-align:center">Acciones</th>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripción Amplia</th>
                <th>Comentario</th>          
        </thead>
        <tbody>
        {% for entity in entities %}
           <tr>
            	<td><a href="{{ path('serviciotercero_show', { 'id': entity.id }) }}">Ver</a></td>
            	<td><a href="{{ path('serviciotercero_edit', { 'id': entity.id }) }}">Editar</a></td>
            	<td><a href="{{ path('serviciotercero_eliminar', { 'id': entity.id }) }}" onclick="return confirm('¿Desea eliminar el item seleccionado?');">Eliminar</a></td>
            	<td>{{ entity.id }}</td>
            	<td>{{ entity.nombre }}</td>
            	<td>{{ entity.descripamplia }}</td>
            	<td>{{ entity.comentario }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if entities.getTotalItemCount > 10 %}
        {{ knp_pagination_render(entities) }}
    {% endif %}
{% endblock %}
