{% extends 'IndicadorBundle::baseindic.html.twig' %} 
{% block content %}        
        <h4>Ranking de Atenciones agrupadas por patrimonios</h4>	
        {{ form(form)}}
        <br/>
        <table class="table table-bordered table-striped ">
            <thead>
                <th>Nro Patrimonio</th>
                <th>Descripci√≥n</th>
                <th>Cantidad de Atenciones</th>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.nropat }}</td>
                        <td>{{ entity.descrippat }}</td>
                        <td>{{ entity.cantAtenciones }}</td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="4"> 
                            <p class="text-center">
                                No hay resultados para mostrar con los parametros ingresados 
                            </p>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if entities.getTotalItemCount > 10 %}
            {{ knp_pagination_render(entities) }}
        {% endif %}
{% endblock %}