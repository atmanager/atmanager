{% extends 'IndicadorBundle::baseindic.html.twig' %} 
{% block content %}        
    <h3>Cantidad de Atenciones por Fallas</h3>
    {{ form(form)}}
    <br/>
        <table class="table table-bordered table-striped ">
            <thead>
                <th>Nro. Falla</th>
                <th>Nombre</th>
                <th>Cantidad</th>
            </thead>
            <tbody>
                {% for dato in entities.datos%}
                <tr>
                    <td>{{ dato.numFalla }}</td>
                    <td>{{ dato.nomFalla }}</td>
                    <td>{{ dato.cantidad }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if entities.datos.getTotalItemCount > 10 %}
            {{ knp_pagination_render(entities.datos) }}
        {% endif %}
{% endblock %}