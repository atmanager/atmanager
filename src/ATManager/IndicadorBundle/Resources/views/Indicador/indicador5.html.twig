{% extends 'IndicadorBundle::baseindic.html.twig' %} 
{% block content %}        
        <h4>Ranking de Demandas por sectores solicitantes</h4>	
        {{ form(form)}}   
        <br/>
        <table class="table table-bordered table-striped ">
            <thead>
                <th>Nro. Sector Solicitante</th>
                <th>Nombre</th>
                <th>Cantidad</th>
            </thead>
            <tbody>
                {% for dato in entities.datos%}
                <tr>
                    <td>{{ dato.secSolicita }}</td>
                    <td>{{ dato.nomSolicita }}</td>
                    <td>{{ dato.cantidad }}</td>
                </tr>
                {% else %}
                    <tr>
                        <td colspan="4"> 
                            <p class="text-center">
                                No hay resultados para mostrar con los parametros ingresados 
                            </p>
                        </td>
                    </tr> 
                {% endfor %}
            </tbody>
        </table>
        {% if entities.datos.getTotalItemCount > 10 %}
            {{ knp_pagination_render(entities.datos) }}
        {% endif %}
{% endblock %}