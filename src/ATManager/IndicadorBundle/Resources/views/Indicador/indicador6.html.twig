{% extends 'IndicadorBundle::baseindic.html.twig' %} 
{% block content %}        
        <h3>Costos por Servicios de terceros (en Pesos)</h3>	
        {{ form(form)}}
        <br/>
        <table class="table table-bordered table-striped ">
            <thead>
                <th>Nro. Servicio Tercero</th>
                <th>Nombre</th>
                <th>Precio</th>
            </thead>
            <tbody>
                {% set total = 0 %}
                {% for dato in entities.datos%}
                <tr>
                    <td>{{ dato.stNumero }}</td>
                    <td>{{ dato.stNombre }}</td>
                    <td>{{ dato.precio }}</td>
                </tr>

                {% set total = total + dato.precio %}
                {% endfor %}
                <tr>
                    <td></td>
                    <td>Total $</td>
                    <td>{{ total }}</td>
                    
                </tr>

            </tbody>
        </table>
        {% if entities.datos.getTotalItemCount > 10 %}
            {{ knp_pagination_render(entities.datos) }}
        {% endif %}
{% endblock %}