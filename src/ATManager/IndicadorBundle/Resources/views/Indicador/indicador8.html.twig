{% extends 'IndicadorBundle::baseindic.html.twig' %} 
{% block content %}        
        <h3>Productividad de Técnicos</h3>	
        {{ form(form)}}
        <br/>
        <table class="table table-bordered table-striped ">
            <thead>
                <th>Nro. Técnico</th>
                <th>Nom. Técnico</th>
                <th>Nom. Sector</th>
                <th>Cantidad</th>
            </thead>
            <tbody>
                {% for dato in entities.datos%}
                <tr>
                    <td>{{ dato.numTecnico }}</td>
                    <td>{{ dato.nomTecnico }}</td>
                    <td>{{ dato.nomSector }}</td>
                    <td>{{ dato.cantidad }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% if entities.datos.getTotalItemCount > 10 %}
            {{ knp_pagination_render(entities.datos) }}
        {% endif %}
{% endblock %}