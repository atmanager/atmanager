{% extends 'PatrimonioBundle::base_patrimonio.html.twig' %}

{% block content %}

<h3>Editar Patrimonio: {{ entity.id }}</h3>

{{ form_start(edit_form,{'attr': {'novalidate':'novalidate'}} )}}  
<div class="row"> 
	<div class="col-xs-6"> 
		{{ form_row(edit_form.clasificacion)}}
		{{ form_row(edit_form.descripcion)}}
		{{ form_row(edit_form.local)}}
		{{ form_row(edit_form.responsable)}}	
		{{ form_row(edit_form.marca)}}
		{{ form_row(edit_form.modelo)}}
		{{ form_row(edit_form.serial)}}
	</div> 
	<div class="col-xs-6">
	 	{{ form_row(edit_form.precio)}}
	 	{{ form_row(edit_form.estimado)}}
	 	{{ form_row(edit_form.fechaAlta)}}
	 	{{ form_row(edit_form.estado)}}
	 	{{ form_row(edit_form.observacion)}}
	 	{{ form_row(edit_form.habilita)}}
	 	{{ form_row(edit_form.submit)}}
	 	<a href="{{ path('patrimonio_buscador') }}">
        	Volver al buscador.
    	</a>
	</div>
</div> 
{{ form_end(edit_form) }}       
    
{% endblock %}
